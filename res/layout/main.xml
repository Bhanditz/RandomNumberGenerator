<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/capacityTextBox" android:layout_gravity="left|center_vertical" android:singleLine="true"
            android:hint="@string/capacity"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_gravity="center" android:layout_weight="1"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/generatedNumber" android:layout_gravity="center" android:layout_weight="2"
            android:textAlignment="gravity" android:gravity="center" android:textSize="14pt"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="@string/generate"
            android:id="@+id/button" android:singleLine="false" android:layout_gravity="right"
            android:layout_weight="0"
            android:onClick="generateNumberHandler"/>
</LinearLayout>